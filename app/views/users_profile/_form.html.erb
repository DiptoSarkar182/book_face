<%= form_with(model: user, url: users_profile_path(user), method: :patch, html: { class: "space-y-4" }) do |form| %>
  <% if user.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
      <h2 class="font-bold"><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul class="mt-3 list-disc list-inside">
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :profile_image, "Attach profile photo:(MAX SIZE 5MB)", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.file_field :profile_image, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div>
    <%= form.label :bio, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :bio, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div>
    <%= form.label :gender, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.select :gender, ['Male', 'Female'], { prompt: 'Select your gender' }, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div>
    <%= form.label :location, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :location, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div>
    <%= form.label :birthday %>
    <%= form.date_field :birthday, start_year: Time.now.year - 100, end_year: Time.now.year, prompt: { day: 'Select day', month: 'Select month', year: 'Select year' } %>
  </div>

  <div>
    <%= form.submit "Update Profile", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
