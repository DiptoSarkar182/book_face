<!DOCTYPE html>
<html>
  <head>
    <title>Book Face</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= favicon_link_tag "icons8-social-network-96.png" %>
  </head>

  <body>
  <h1 >
    <%= link_to 'Book Face', root_path %>
  </h1>
  <div>
    <% if !user_signed_in? %>
    <% else %>
      <div>
        <div>
          <%= "Currently signed in as: #{current_user.full_name}" %>
        </div>
        <div>
          <%= image_tag(current_user.profile_image.attached? ? current_user.profile_image : 'default_pic.png') %>
        </div>
        <div>
          <%= link_to "Edit account", edit_user_registration_path %>
        </div>
        <div>
          <%= link_to "Profile", users_profile_path(current_user) %>
        </div>
        <div>
          <%= link_to "Friends", friend_requests_path %>
        </div>
        <div>
          <%= link_to "Notifications (#{current_user.received_friend_requests.count})", notifications_path %>
        </div>
        <div>
          <%= link_to "Friends List", friends_list_index_path %>
        </div>
        <div>
          <%= button_to "Log Out", destroy_user_session_url, method: "delete" %>
        </div>
      </div>
    <% end %>
  </div>
  <% if alert || notice %>
    <div >
      <div >
        <% if notice %>
          <p  role="alert"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p  role="alert"><%= alert %></p>
        <% end %>
      </div>
    </div>
  <% end %>
    <%= yield %>
  </body>
</html>
