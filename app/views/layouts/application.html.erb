<!DOCTYPE html>
<html>
  <head>
    <title>Book Face</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <h1 >
    <%= link_to 'Book Face', root_path, class: 'glow-link' %>
  </h1>
  <div>
    <% if !user_signed_in? %>
    <% else %>
      <div>
        <p>
          <%= "Currently signed in as: #{current_user.full_name}" %>
        </p>
        <%= button_to "Log Out", destroy_user_session_url, method: "delete" %>
      </div>
    <% end %>
  </div>
    <%= yield %>
  </body>
</html>
