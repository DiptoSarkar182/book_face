<div class="flex">
  <div class="w-1/4 mr-3">
    <div class="bg-gray-800 text-white py-4 px-6">
      <%= current_user.full_name %>'s Inbox
    </div>

    <div class="bg-gray-100 py-4 px-6 border-4 border-gray-800">
      <% @inbox_friends.each do |inbox_friend| %>
        <%= render 'inbox/inbox_friend', inbox_friend: inbox_friend %>
      <% end %>
    </div>
  </div>

  <div class="w-3/4">
    <%= turbo_frame_tag "message_frame" %>
  </div>
</div>