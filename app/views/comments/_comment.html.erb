<div class="border-b border-gray-200 py-4">
  <div class="font-bold text-sm mb-2"><%= comment.user.full_name %> Commented:</div>
  <div class="text-md mb-2"><%= comment.body %></div>
  <div title="<%= comment.created_at.strftime('%B %d, %Y %I:%M %p') %>" class="text-gray-500 text-xs mb-2">Commented <%= time_ago_in_words(comment.created_at) %> ago</div>
  <% if comment.user == current_user %>
    <div class="flex items-center space-x-2">
      <%= link_to "Edit", edit_post_comment_path(comment.post, comment), class: "text-blue-500 hover:text-blue-600" %>
      <%= link_to "Delete", post_comment_path(comment.post, comment), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-500 hover:text-red-600" %>
    </div>
  <% end %>
</div>