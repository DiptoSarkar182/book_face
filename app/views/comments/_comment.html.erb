<div>
  <%= comment.user.full_name %> Commented:
</div>
<div>
  <%= comment.body %>
</div>
<div title="<%= comment.created_at.strftime('%B %d, %Y %I:%M %p') %>">
  Commented <%= time_ago_in_words(comment.created_at) %> ago
</div>
<% if comment.user == current_user %>
  <div>
    <%= link_to "Edit", edit_post_comment_path(comment.post, comment)%>
  </div>
  <div>
    <%= link_to "Delete", post_comment_path(comment.post, comment),  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }  %>
  </div>
<% end %>