<div class="mb-4" data-controller="previews">
  <%= form.label :post_image, "Attach photo (Max Size 5MB):", class: "block font-medium mb-2 text-lg" %>
  <%= form.file_field :post_image, accept: 'image/png,image/gif,image/jpeg',
                      direct_upload: true,
                      data: {previews_target: "input", action: "change->previews#preview"}, class: "w-full p-2 border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500" %>

  <div>
    <% if post.post_image.attached? %>
      <%= image_tag post.post_image, data: { previews_target: "preview" }, class: "image w-32 h-auto object-contain rounded" %>
    <% else %>
      <%= image_tag "", data: { previews_target: "preview" }, class: "image w-32 h-auto object-contain rounded" %>
    <% end %>
  </div>
</div>