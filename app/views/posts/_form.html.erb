<%= form_with(model: post, class: "space-y-4") do |form| %>
  <% if post.errors.any? %>
    <div role="alert" class="bg-red-100 border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <h2 class="font-bold"><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul class="list-disc pl-5">
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.text_area :body, placeholder: "What's on your mind #{current_user.full_name}?", class: "w-full h-24 p-2 border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 text-lg" %>
  </div>

  <div class="mb-4">
    <%= form.label :post_image, "Attach photo (Max Size 5MB):", class: "block font-medium mb-2 text-lg" %>
    <%= form.file_field :post_image, class: "w-full p-2 border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.submit class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded text-lg cursor-pointer" %>
  </div>
<% end %>