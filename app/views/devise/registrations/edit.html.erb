<h2 class="text-2xl font-bold mb-4">Edit <%= resource_name.to_s.humanize %></h2>

<div class="max-w-md mx-auto">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :first_name, class: "block font-medium mb-2" %><br />
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first name", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :last_name, class: "block font-medium mb-2" %><br />
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last name", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block font-medium mb-2" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="mb-4 text-sm text-gray-600">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="mb-4">
      <%= f.label :password, class: "block font-medium mb-2" %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      <% if @minimum_password_length %>
        <br />
        <em class="text-sm text-gray-600"><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block font-medium mb-2" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :current_password, class: "block font-medium mb-2" %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "bg-indigo-500 hover:bg-indigo-600 text-white font-medium py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 w-full" %>
    </div>
  <% end %>

  <h3 class="text-xl font-bold mt-4 mb-2">Cancel my account</h3>

  <div class="mb-4 text-sm text-gray-600">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "bg-red-500 hover:bg-red-600 text-white font-medium py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 w-full" %></div>

  <%= link_to "Back", :back, class: "text-indigo-500 hover:text-indigo-600" %>
</div>